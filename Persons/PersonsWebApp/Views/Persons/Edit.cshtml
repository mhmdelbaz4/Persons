@model PersonUpdateRequest

@{
    ViewBag.Title ="Edit person";
}

<a asp-controller="Persons" asp-action="Index" class="link-hover">Back to list</a>

<h1>Edit person</h1>  


<div class="w-50">
    <form action="~/Persons/Edit" method="post">

        <input type ="hidden" asp-for="Id" >

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Name" class="form-label pt">Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" >
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" >
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="DateOfBirth" class="form-label pt">BirthDate</label>
            </div>
            <div class="flex-1">
                <input asp-for="DateOfBirth" class="form-input" >
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Gender" class="form-label">Gender</label>
            </div>
            <div class="flex-1">
                <input type="radio" asp-for="Gender" value="Male" >
                <label for="Male">Male</label>
                <input type="radio"  asp-for="Gender" id="Female" value="Female">
                <label for="Female">Female</label>
                <input type="radio"  asp-for="Gender" id="Other" value="Other">
                <label for="Other">Other</label>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="CountryId" class="form-label pt">Country</label>
            </div>
            <div class="flex-1">
                <select asp-for="CountryId" asp-items="@ViewBag.Countries" class="form-input"> 
                    <option value="">Select a country please..</option>
                </select>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Address" class="form-label pt">Address</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Address" class="form-input"> </textarea>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="radio" asp-for="ReceivesNewsLetter" value="true"/> 
                <label asp-for="ReceivesNewsLetter" class="form-label pt">Receive News Letter</label>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back ">Update</button>

                @if (ViewBag.Errors != null) 
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach(var error in ViewBag.Errors)
                            {
                                <li class="ml" >@error</li>
                            }    
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>

@section scripts
{
    <script src="~/jquery.min.js"></script>
    <script src="~/jquery.validate.min.js"></script>
    <script src="~/jquery.validate.unobtrusive.min.js"></script>
}


